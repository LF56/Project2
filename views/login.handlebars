<div class="uk-child-width-expand@s uk-text-center" uk-grid>
  <div class="uk-card  uk-card-body">
    <div class="uk-card uk-card uk-card-body uk-margin-xlarge-top">
      <a href="https://suicidepreventionlifeline.org/talk-to-someone-now/"><img src="/stylesheets/images/hotlineNEW.png"
          width="500" height="200" alt=""></a>
    </div>
  </div>
  <div class="uk-card  uk-card-body uk-margin-xlarge-top">
    <form class="uk-position-center login-form">

      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail" style="color:rgb(223, 35, 98)"></span>
          <label for="email-login"></label>
          <input type="text" class="uk-form-large" id="email-login" placeholder="email" />
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon:lock" style="color:rgb(223, 35, 98)"></span>
          <label for="password-login"></label>
          <input type="password" class="uk-form-large" id="password-login" placeholder="password" />
        </div>
      </div>
      <div>
        <button class="uk-button uk-button-danger" type="submit">login</button>
      </div>
    </form>
  </div>



  <div class="uk-card  uk-card-body uk-margin-xlarge-top">
    <form class="signup-form uk-position-center">
      <div>
        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" style="color:rgb(223, 35, 98)" uk-icon="icon: user"></span>
            <label for="username-signup"></label>
            <input type="text" class="uk-form-large" id="username-signup" placeholder="username" />
          </div>
        </div>
      </div>
      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail" style="color:rgb(223, 35, 98)"></span>
          <label for="email-signup"></label>
          <input type="text" class="uk-form-large" id="email-signup" placeholder="email" />
        </div>
      </div>
      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock" style="color:rgb(223, 35, 98)"></span>
          <label for="password-signup"></label>
          <input type="password" class="uk-form-large" id="password-signup" placeholder="password"/>
        </div>
      </div>
      <div>
        <button class="uk-button uk-button-danger" type="submit">signup</button>
      </div>
    </form>
  </div>


</div>
</div>

<script src="/javascript/login.js"></script>